rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Reports Storage Rules
    match /reports/{userId}/{fileName} {
      // Allow uploads only for PDF files
      allow write: if request.resource.contentType == 'application/pdf'
                   && fileName.matches('.*\\.pdf');
      
      // Allow public read access for generated reports
      allow read: if true;
    }
    
    // Default deny for all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
