rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Blog featured images are publicly readable
    match /blog/{filename} {
      allow read: if true;
      allow write: if false;
    }

    // All other paths require authentication
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
