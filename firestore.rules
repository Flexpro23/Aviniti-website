rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users Collection Rules
    // Note: Current implementation uses email as document ID.
    // Since frontend-only Auth is not yet implemented, we rely on document ID matching.
    match /users/{userId} {
      // Allow creation only if the provided email matches the document ID
      allow create: if request.resource.data.emailAddress == userId;
      
      // Allow updates only if the email address remains consistent with the ID
      // This prevents moving data to a different user identity
      allow update: if request.resource.data.emailAddress == userId;
      
      // Allow public read access to check for existing users
      // In a production environment with Auth, this should be restricted to request.auth.uid == userId
      allow read: if true;
    }

    // Reports Collection Rules
    match /reports/{reportId} {
      // Allow creating reports (required for the estimation tool)
      // We validate that the basic structure exists
      allow create: if request.resource.data.keys().hasAll(['userEmail', 'status']);
      
      // Allow reading reports (publicly accessible for now, can be restricted to owner later)
      allow read: if true;
    }

    // Default deny for all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
